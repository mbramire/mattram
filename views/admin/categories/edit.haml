.content-wrapper
  %section
    = haml :"shared/_errors", locals: {obj: @category}
    %h2 Edit Category

    %form{ action: "/admin/categories/#{@category.id}", method: "post", enctype: "multipart/form-data"}
      %input{ type: "hidden", name: "_method", value: "put"}
      = haml :"admin/categories/_category_form"
      %input.btn{type: "submit", value: "Update Category"}

    %form{ action: "/admin/categories/#{@category.id}", method: "post" }
      %input{ type: "hidden", name: "_method", value: "delete" }
      %input.btn.btn-delete{ type: "submit", value: "Delete Category"}
