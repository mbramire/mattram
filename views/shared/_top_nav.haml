%nav.header
  %a{ href: "/" }
    .main-logo
  %ul
    %a{ href: "/" }
      %li
        home
    %a{ href: "/about" }
      %li
        about me
    %a{ href: "/archive" }
      %li#add-drop
        posts
    %a{ href: "/#contact" }
      %li
        contact
    %a{ href: "/portfolio" }
      %li
        portfolio

#drop-down
  %ul
    - @categories.each do |c|
      %a{ href: "/archive/#{c.id}" }
        %li{ id: "list-item-#{c.id}" }
          %img.med-icon{ src: (c.nav_icon) }
          %span.raise-txt
            = c.title
      %style
        = "#list-item-#{c.id}:hover"
        {
        background: black;
        }
        = "#list-item-#{c.id}"
        {
        = "background: #{c.color};"
        }

- unless @homepage.present?
  .teal-bg-pattern.nav-chrome